<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecomers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body class="custom-body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ecomers</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-area="" asp-controller="User" asp-action="Logout" method="post" class="nav-item">
                                <button type="submit" class="nav-link text-dark btn btn-link" style="padding: 0; border: none; background: none;">Logout</button>
                            </form>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <aside class="custom-sidenav">
        <div class="sidenav-header">
            <a class="navbar-brand">
                <span class="brand-text">Admin Dashboard</span>
            </a>
        </div>
        <div class="sidenav-content">
            <nav class="sidenav-nav">
                @if (User.Identity.IsAuthenticated)
                {
                     <div class="nav-item">
                    <a class="nav-link" href="#" id="orders">
                        <span class="nav-link-text">Orders</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" href="#" id="products">
                        <span class="nav-link-text">Products</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" href="#" id="sales-analytics">
                        <span class="nav-link-text">Sales Analytics</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" href="#" id="users">
                        <span class="nav-link-text">Users</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" href="#" id="contact">
                        <span class="nav-link-text">Contact</span>
                    </a>
                    </div>
                } else
                {
                    <p>Login First !</p>
                }

            </nav>
        </div>
    </aside>

    <div class="containerPage">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        .custom-body {
            display: flex;
            flex-direction: column;
        }

        header {
            z-index: 1000;
            width: 100%;
        }

        .custom-sidenav {
            width: 250px;
            background-color: #f8f9fa;
            position: fixed;
            top: 56px; /* Adjust this based on the height of your navbar */
            left: 0;
            height: calc(100% - 56px); /* Adjust this based on the height of your navbar */
            padding-top: 20px;
            border-right: 1px solid #dee2e6;
        }

        .sidenav-header {
            padding: 20px;
        }

        .sidenav-content {
            padding: 20px;
        }

        .sidenav-nav .nav-item {
            margin-bottom: 10px;
        }

        .sidenav-nav .nav-link {
            color: #343a40;
            text-decoration: none;
        }

            .sidenav-nav .nav-link:hover {
                background-color: #e9ecef;
                border-radius: 5px;
            }

        .containerPage {
            margin-left: 250px; /* Adjust this based on the width of your sidebar */
            padding: 20px;
            height: calc(100vh - 160px); /* Subtract the height of the navbar */
        }

        .custom-horizontal {
            margin-top: 0;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

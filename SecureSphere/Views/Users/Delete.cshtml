    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="card-title text-danger mb-4">Delete User</h1>
            <div class="alert alert-warning" role="alert">
                Are you sure you want to delete this user?
            </div>    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)

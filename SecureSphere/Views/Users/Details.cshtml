@model SecureSphere.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PasswordHash)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PasswordHash)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>
<table class="table table-light w-75 table-bordered table-hover table-sm table-responsive">
    <tr>
        <th>Detections</th>
        <th>Confidence</th>
        <th>Reason</th>
        <th>Info</th>
    </tr>
    @foreach (Detection detection in ViewBag.Detections)
    {
        <tr>
            <td>@detection.Timestamp</td>
            <td>@detection.Confidence</td>
            <td>@detection.Reason</td>
            <td>
                <a asp-controller="Detections" asp-action="Edit" asp-route-id="@detection.ID">Edit</a> |
                <a asp-controller="Detections" asp-action="Details" asp-route-id="@detection.ID">Details</a> |
                <a asp-controller="Detections" asp-action="Delete" asp-route-id="@detection.ID">Delete</a>
            </td>

        </tr>
    }
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

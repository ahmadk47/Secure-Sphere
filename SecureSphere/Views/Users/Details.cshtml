@model SecureSphere.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th class="col-sm-2">@Html.DisplayNameFor(model => model.UserName)</th>
            <th class="col-sm-10">@Html.DisplayFor(model => model.UserName)</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Email)</td>
            <td>@Html.DisplayFor(model => model.Email)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.PasswordHash)</td>
            <td>@Html.DisplayFor(model => model.PasswordHash)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.CreatedAt)</td>
            <td>@Html.DisplayFor(model => model.CreatedAt)</td>
        </tr>
    </tbody>
</table>

</div

<table class="table table-light w-75 table-bordered table-hover table-sm table-responsive">
    <tr>
        <th>Detections</th>
        <th>Confidence</th>
        <th>Reason</th>
        <th>Info</th>
    </tr>
    @foreach (Detection detection in ViewBag.Detections)
    {
        <tr>
            <td>@detection.Timestamp</td>
            <td>@detection.Confidence</td>
            <td>@detection.Reason</td>
            <td class="btn-group-sm">
                <a class="btn btn-outline-secondary btn-sm active navbar-text text-capitalize fs-6 fw-bold" style="color: #90AFC5" asp-controller="Detections" asp-action="Edit" asp-route-id="@detection.ID">Edit</a> |
                <a class="btn btn-outline-secondary btn-sm active navbar-text text-capitalize fs-6 fw-bold" style="color: #90AFC5" asp-controller="Detections" asp-action="Details" asp-route-id="@detection.ID">Details</a> |
                <a class="btn btn-outline-secondary btn-sm active navbar-text text-capitalize fs-6 fw-bold" style="color: #90AFC5" asp-controller="Detections" asp-action="Delete" asp-route-id="@detection.ID">Delete</a>
            </td>

        </tr>
    }
</table>
<div>
    <a class="btn btn-outline-secondary btn-lg active navbar-text text-capitalize fs-6 fw-bold" style="color: #90AFC5" asp-action="Edit" asp-route-id="@Model?.Id">Edit User</a> |
    <a class="btn btn-outline-danger btn-lg active navbar-text text-capitalize fs-6 fw-bold" style="color: #90AFC5" asp-action="Index">Back to List</a>
</div>
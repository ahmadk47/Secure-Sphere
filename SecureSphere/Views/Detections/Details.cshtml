@model SecureSphere.Models.Detection

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/detection-styles.css" asp-append-version="true" />
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="card-title mb-4">Detection Details</h1>
            <div class="table-responsive detection-table" style="overflow:auto;">
                <table class="table table-borderless mb-0">
                    <thead>
                        <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Timestamp)</th>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.WeaponType)</th>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Confidence)</th>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</th>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Reason)</th>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Camera)</th>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.User)</th>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Camera.Branch.Client)</th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => model.Timestamp)</td>
                            <td>@Html.DisplayFor(model => model.WeaponType)</td>
                            <td>@Html.DisplayFor(model => model.Confidence)</td>
                            <td>@Html.DisplayFor(model => model.Status)</td>
                            <td>@Html.DisplayFor(model => model.Reason)</td>
                            <td>@Html.DisplayFor(model => model.Camera.ID)</td>
                            <td>@Html.DisplayFor(model => model.User.UserName)</td>
                            <td>@Html.DisplayFor(model => model.Camera.BranchID)</td>
                        </tr>
                    </tbody>
                 </table>
    </div>
<div class="mt-3">
    <a class="btn btn-outline-secondary btn-sm active navbar-text text-capitalize fs-6 fw-bold" style="color: #90AFC5" asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a class="btn btn-outline-danger btn-sm active navbar-text text-capitalize fs-6 fw-bold" style="color: #90AFC5" asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserID">Back to List</a>
</div>
</div>
</div>
</div>
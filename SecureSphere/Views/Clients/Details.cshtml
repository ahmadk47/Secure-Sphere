@model SecureSphere.Models.Client
@{
    ViewData["Title"]="Details";
}


<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>

    </dl>
</div>

<p><a asp-controller="Branches" asp-action="Create" asp-route-ClientID="@Model.ID">Add Branch</a></p>

<table class="table table-light w-75 table-bordered table-hover table-sm table-responsive">
    <tr>
        <th>Branches</th>
        <th>Info</th>
    </tr>
    @foreach(Branch branch in ViewBag.Branchs)
    {
        <tr>
            <td>@branch.Address</td>
            <td>
                <a asp-controller="Branches" asp-action="Edit" asp-route-id="@branch.ID">Edit</a> |
                <a asp-controller="Branches" asp-action="Details" asp-route-id="@branch.ID">Details</a> |
                <a asp-controller="Branches" asp-action="Delete" asp-route-id="@branch.ID">Delete</a>
            </td>
        </tr>
    }
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
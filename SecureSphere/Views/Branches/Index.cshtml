@model IEnumerable<SecureSphere.Models.Branch>

@{
    ViewData["Title"] = "Index";
}

<h1>Clients Branches</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Branches" asp-action="Index" id="searchForm">
    <p>
        Name: <input type="text" name="SearchString" id="searchInput" value="@ViewBag.SearchString" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            var delay = (function () {
                var timer = 0;
                return function (callback, ms) {
                    clearTimeout(timer);
                    timer = setTimeout(callback, ms);
                };
            })();
            $('#searchInput').on('input', function () {
                var searchString = $(this).val();
                delay(function () {
                    $.ajax({
                        url: '@Url.Action("Index", "Branches")',
                        data: { SearchString: searchString },
                        success: function (result) {
                            $('tbody').html($(result).find('tbody').html());
                        },
                        error: function (xhr, status, error) {
                            console.error('AJAX error:', status, error);
                        }
                    });
                }, 300); // Wait for 300ms after the user stops typing
            });
        });
    </script>
}

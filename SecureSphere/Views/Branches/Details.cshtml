@model SecureSphere.Models.Branch

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Branch</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client)
        </dd>
    </dl>
</div>
<p><a asp-controller="Cameras" asp-action="Create">Add Camera</a></p>
<table class="table table-light w-75 table-bordered table-hover table-sm table-responsive">
    <tr>
        <th>Cameras</th>
        <th>IP Address</th>
        <th>Info</th>
    </tr>
    @foreach (Camera camera in ViewBag.Cameras)
    {
        <tr>
            <td>@camera.Name</td>
            <td>@camera.IpAddress</td>
            <td>
                <a asp-controller="Cameras" asp-action="Edit" asp-route-id="@camera.ID">Edit</a> |
                <a asp-controller="Cameras" asp-action="Details" asp-route-id="@camera.ID">Details</a> |
                <a asp-controller="Cameras" asp-action="Delete" asp-route-id="@camera.ID">Delete</a>
            </td>
        </tr>
    }
</table>

<p><a asp-controller="Users" asp-action="Create">Add Users</a></p>

<table class="table table-light w-75 table-bordered table-hover table-sm table-responsive">
    <tr>
        <th>Users</th>
        <th>Emails</th>
        <th>Info</th>
    </tr>
    @foreach (ApplicationUser user in ViewBag.Users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">Details</a> |
                <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>

        </tr>
    }
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

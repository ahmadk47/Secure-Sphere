@model SecureSphere.Models.Branch

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-success"> @ViewBag.meg</h2>
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-body">
            <h1 class="card-title mb-4">Create A New Branch</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
    
            <input type="hidden" asp-for="ClientID" class="form-control" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-danger btn-lg active navbar-text text-capitalize fs-6 fw-bold" style="color: #90AFC5" asp-controller="Clients" asp-action="Details" asp-route-id="@Model.ClientID">Back to List</a>
            </div>
        </form>
            </div>
        </div>
    </div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

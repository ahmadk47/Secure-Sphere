@model IEnumerable<SecureSphere.Models.Camera>

@{
    ViewData["Title"] = "Index";
}

<h1>Cameras</h1>
<li>
    <button class="btn navbar-text text-capitalize fs-6 fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#detectionsCollapse" aria-expanded="false" style="color:#90AFC5">
        Detections
    </button>
    <ul class="collapse" id="detectionsCollapse" style="background-color : #FDF6F6;color:#90AFC5">
        <li><a class="nav-link navbar-text text-capitalize fs-6 fw-bold" asp-area="" asp-controller="Detections" asp-action="index" style="color:#90AFC5">Show Detections</a></li>
        <li><a class="nav-link navbar-text text-capitalize fs-6 fw-bold" asp-area="" asp-controller="Detections" asp-action="create" style="color:#90AFC5">Add Detections</a></li>
    </ul>
</li>
<table class="table table-light w-50 table-bordered table-hover table-sm table-responsive">
    <caption>
        List Of Cameras
    </caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IpAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>

            <th>
                Properties
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

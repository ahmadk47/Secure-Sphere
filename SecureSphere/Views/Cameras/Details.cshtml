@model SecureSphere.Models.Camera

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Camera</h4>
    <hr />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</th>
                <th class="col-sm-10">@Html.DisplayFor(model => model.Name)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(model => model.IpAddress)</td>
                <td>@Html.DisplayFor(model => model.IpAddress)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Status)</td>
                <td>@Html.DisplayFor(model => model.Status)</td>
            </tr>
        </tbody>
    </table>

</div>

<table class="table table-light w-75 table-bordered table-hover table-sm table-responsive">
    <tr>
        <th>Detections</th>
        <th>Confidence</th>
        <th>Reason</th>
        <th>Info</th>
    </tr>
    @foreach (Detection detection in ViewBag.Detections)
    {
        <tr>
            <td>@detection.Timestamp</td>
            <td>@detection.Confidence</td>
            <td>@detection.Reason</td>
            <td>
                <a asp-controller="Detections" asp-action="Edit" asp-route-id="@detection.ID">Edit</a> |
                <a asp-controller="Detections" asp-action="Details" asp-route-id="@detection.ID">Details</a> |
                <a asp-controller="Detections" asp-action="Delete" asp-route-id="@detection.ID">Delete</a>
            </td>
            
        </tr>
    }
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-controller="Branches" asp-action="Details" asp-route-id="@Model.BranchID">Back to List</a>
</div>

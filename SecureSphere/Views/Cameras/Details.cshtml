@model SecureSphere.Models.Camera

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Camera</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IpAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IpAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>

<table class="table">
    <tr>
        <th>Detections</th>
        <th>Confidence</th>
        <th>Reason</th>
        <th>Info</th>
    </tr>
    @foreach (Detection detection in ViewBag.Detections)
    {
        <tr>
            <td>@detection.Timestamp</td>
            <td>@detection.Confidence</td>
            <td>@detection.Reason</td>
            <td>
                <a asp-controller="Detections" asp-action="Edit" asp-route-id="@detection.ID">Edit</a> |
                <a asp-controller="Detections" asp-action="Details" asp-route-id="@detection.ID">Details</a> |
                <a asp-controller="Detections" asp-action="Delete" asp-route-id="@detection.ID">Delete</a>
            </td>
            
        </tr>
    }
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/homepage.css">
    <title>Secure Sphere</title>
</head>
<body>

    <div class="hero">
        <div class="hero-text">
            <h1>Welcome to Secure Sphere</h1>
            <p>Protecting what matters most with real-time, AI-powered security solutions.</p>
            <a href="#about" class="btn-secondary">Learn More</a>
        </div>
    </div>

    <section id="about" class="section about">
        <div class="container">
            <h2>About Secure Sphere</h2>
            <p class="homepage-subtext">
                Secure Sphere is a cutting-edge security solution designed for real-time weapon detection, helping you ensure the safety of your organization.
                Using the latest AI technology, we detect potential threats and provide instant alerts, offering peace of mind in an unpredictable world.
            </p>
        </div>
    </section>

    <section class="section features">
        <div class="container">
            <h2>Our Features</h2>
            <div class="feature-grid">
                <div class="feature-item">
                    <h3>Real-Time Monitoring</h3>
                    <p>Receive instant alerts the moment a threat is detected, ensuring rapid response times.</p>
                </div>
                <div class="feature-item">
                    <h3>Advanced AI Detection</h3>
                    <p>Leverage the power of artificial intelligence to detect weapons with high accuracy.</p>
                </div>
                <div class="feature-item">
                    <h3>Comprehensive Reports</h3>
                    <p>Access detailed reports and system logs to monitor all detected threats and activities.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="section contact">
        <div class="container">
            <h2>Get in Touch</h2>
            <p class="homepage-subtext">If you have any questions or need more information, please feel free to reach out.</p>
            <a href="mailto:securespherealert@gmail.com" class="btn-secondary">Contact Us</a>
        </div>
    </section>

</body>
</html>
